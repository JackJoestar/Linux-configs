# i3 config file (v4)

#AR
##AUTORUN ON STARTUP

#Gaps
gaps inner 15
gaps outer 15
for_window [class="^.*"] border pixel 0

#Status Bar
bar {
	position top
        font pango:monospace 12
	status_command i3blocks -c ~/.config/i3/i3blocks.conf
	colors {
		background $bg_color

	}
}

#Constantly update urxvt
exec_always --no-startup-id xrdb ~/.Xresources

#Disable Touchscreen(A script I made.)
exec_always --no-startup-id disabletouchscreen

#Font
font pango:monospace 12

#Background Image
exec_always --no-startup-id feh --bg-scale ~/.config/wall.png

#Apply colorscheme generated by pywal
#exec_always --no-startup-id wal -R -n

#Using Windows key as mod(Mod4)
set $mod Mod4
floating_modifier $mod

#Terminal
set $term urxvt
bindsym $mod+Return exec $term
bindsym $mod+Shift+Return exec $term -e tmux

#Colors
set $bg_color #191919
set $unfocused_color #666666
set $text_color #ffffff
set $inactive_text_color #cccccc
set $urgent_color #db0909

client.focused          $bg_color $bg_color $text_color 
client.focused_inactive $unfocused_color $unfocused_color $inactive_text_color
client.unfocused        $unfocused_color $unfocused_color $inactive_text_color
client.urgent		$urgent_color $urgent_color $text_color

#Fade effect
exec_always compton -f

#Power Management
exec_always $term -e xfce4-power-manager

##END AUTORUN
#AR


#LK
##LETTER KEYS

#Kill Focused Window[q][Q]
bindsym $mod+q kill
bindsym $mod+Shift+q kill

#Open IRC[w]
bindsym $mod+w exec $term -e weechat

#View CPU processes[W]
bindsym $mod+Shift+w exec $term -e htop

#Open Eclipse on Workspace 3[e]
#bindsym $mod+e exec --no-startup-id ./eclipse/java-oxygen/eclipse/eclipse
#assign [class="Eclipse"] $workspace3

#Open Code::Blocks on Workspace 3[E]
#bindsym $mod+Shift+e exec --no-startup-id codeblocks
#assign [class="Codeblocks"] $workspace3 

#Ranger[r]
bindsym $mod+r exec $term -e ranger

#Restart i3 in place[R]
bindsym $mod+Shift+r restart

#Split toggle[t]
bindsym $mod+t split toggle

#Back to default gap size[T]
bindsym $mod+Shift+t gaps inner current set 15; gaps outer current set 15

#Open LibreOffice on Workspace 6[y]
bindsym $mod+y exec --no-startup-id libreoffice
assign [class="libreoffice"] $workspace6

#Open Intellij IDE on Workspace 3[i]
#bindsym $mod+i exec --no-startup-id idea
#assign [class="jetbrains-idea-ce"] $workspace3
#Resize[Y][U][I][O]
bindsym $mod+Shift+y resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+u resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+i resize grow height 10 px or 10 ppt
bindsym $mod+Shift+o resize grow width 10 px or 10 ppt

#Open Evince[p]
bindsym $mod+p exec --no-startup-id evince
assign [class="Evince"] $workspace5

#Increase or decrease inner gaps[s][S]
bindsym $mod+s gaps inner current plus 5
bindsym $mod+Shift+s gaps inner current minus 5

#Dmenu[d]
bindsym $mod+d exec dmenu_run

#Fullscr$een[F]
bindsym $mod+Shift+f fullscreen toggle

#Open GIMP[g]
bindsym $mod+g exec --no-startup-id gimp
assign [class="Gimp"] $workspace7

#Vim-like focus and moving[h][j][k][l][H][J][K][L]
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left 30
bindsym $mod+Shift+j move down 30
bindsym $mod+Shift+k move up 30
bindsym $mod+Shift+l move right 30

#Gaps outer resizing[z][Z]
bindsym $mod+z gaps outer current plus 5
bindsym $mod+Shift+z gaps outer current minus 5

#Configure i3 config file[c]
bindsym $mod+c exec $term -e vim ~/.config/i3/config 
#Reload i3 in place[C]
bindsym $mod+Shift+c reload

#Open up Virtual Box[v]
#bindsym $mod+v exec --no-startup-id virtualbox
#assign [class="VirtualBox"] $workspace4

#Open Firefox on Workspace 2[b]
bindsym $mod+b exec --no-startup-id firefox 
assign [class="Firefox"] $workspace2

#Lock Screen[X]
bindsym $mod+Shift+x exec i3lock -f

#Boot cmus[m]
#bindsym $mod+m exec $term -e cmus


#LK
##END LETTER KEYS




#OK
##OTHER KEYS

#Rebooting
bindsym $mod+Shift+Backspace exec reboot

#Shutdown
bindsym $mod+Escape exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'" 
bindsym $mod+Shift+Escape exec shutdown now

#Focus 
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

#Move window
bindsym $mod+Shift+Left move left 10
bindsym $mod+Shift+Down move down 10
bindsym $mod+Shift+Up move up 10
bindsym $mod+Shift+Right move right 10

#Tiling/Floating Toggle
bindsym $mod+Shift+space floating toggle

#Brightness
#bindsym XF86MonBrightnessUp exec xbacklight -inc 10
#bindsym XF86MonBrightnessDown exec xbacklight -dec 10

#Volume
bindsym XF86AudioRaiseVolume exec amixer -q -c 1 set Master 2dB+ unmute
bindsym XF86AudioLowerVolume exec amixer -q -c 1 set Master 2dB- unmute
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle

#Disable Help
bindsym XF86Help exec --no-startup-id echo "help" > /dev/null

##END OTHER KEYS
#OK



#Workspaces
set $workspace1 "1:Home"
set $workspace2 "2:Firefox"
set $workspace3 "3:Coding"
set $workspace4 "4:VMs"
set $workspace5 "5:Reading"
set $workspace6 "6:College"
set $workspace7 "7:Gimp"
#set $workspace8 ""
#set $workspace9 ""
set $workspace10 "10:Music"

#Quick workspace switch
bindsym $mod+Tab workspace back_and_forth

#Switch workspace
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace $workspace10

#Move focused window to a workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace $workspace10

#######################################################################
# automatically start i0-config-wizard to offer the user to create a
# keysym-based config which used their favorite modifier (alt or windows)
#
# i3-config-wizard will not launch if there already is a config file
# in ~/.i3/config.
#
# Please remove the following exec line:
#######################################################################
exec i3-config-wizard
